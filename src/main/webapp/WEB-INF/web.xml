<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.yootk.common.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>charset</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>DispatcherServlet</servlet-name>
        <servlet-class>com.yootk.common.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>scanPackages</param-name>
            <param-value>com.yootk.mall</param-value> <!-- 如果有多个包使用“;”分割 -->
        </init-param>
        <init-param>
            <param-name>validationBaseName</param-name>
            <param-value>com.yootk.mall.action.validate.Validation</param-value>
        </init-param>
        <init-param>
            <param-name>errorPageBaseName</param-name>
            <param-value>com.yootk.mall.action.validate.ErrorPage</param-value>
        </init-param>
        <init-param>
            <param-name>messageBaseName</param-name>
            <param-value>com.yootk.mall.action.resource.Message</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>RandomCode</servlet-name>
        <servlet-class>com.yootk.common.servlet.web.RandomCode</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RandomCode</servlet-name>
        <url-pattern>/ImageCode</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DispatcherServlet</servlet-name>
        <url-pattern>*.action</url-pattern>
    </servlet-mapping>
</web-app>
